<Page x:Class="DLInventoryPacking.WinApps.Pages.GreigeBarcodePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DLInventoryPacking.WinApps.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="GreigeBarcodePage">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Image
                HorizontalAlignment="Left" Name="img" Height="200" Margin="120,0,0,170" VerticalAlignment="Bottom" Width="200" Source="/Resource/logo.png" Opacity="0.35"/>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="2*"/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <Label Content="Barcode Greige" FontSize="30" FontWeight="Bold" Foreground="WhiteSmoke" Grid.ColumnSpan="2" Margin="0,0,166,34.2" Grid.RowSpan="2"/>

            <Label Content="Barang" FontSize="18" FontWeight="Bold" Grid.Row="1"/>

            <Label Content="Jenis Anyaman" FontSize="18" Grid.Row="2" HorizontalAlignment="Right"/>
            <TextBox x:Name="WovenTypeTextBox" Width="100" FontSize="18" Grid.Row="2" Grid.Column="1" HorizontalAlignment="Left" VerticalAlignment="Center"/>

            <Label Content="Konstruksi" FontSize="18" Grid.Row="3" HorizontalAlignment="Right"/>
            <StackPanel Orientation="Horizontal" Grid.Row="3" Grid.Column="1">
                <TextBox x:Name="Construction1TextBox" Width="50" FontSize="18" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                <Label Content="X" FontSize="18" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                <TextBox x:Name="Construction2TextBox" Width="50" FontSize="18" HorizontalAlignment="Left" VerticalAlignment="Center"/>
            </StackPanel>

            <Label Content="Lebar" FontSize="18" Grid.Row="4" HorizontalAlignment="Right"/>
            <TextBox x:Name="WidthTextBox" Width="100" FontSize="18" Grid.Row="4" Grid.Column="1" HorizontalAlignment="Left" VerticalAlignment="Center"/>

            <Label Content="Jenis Benang 1" FontSize="18" Grid.Row="5" HorizontalAlignment="Right"/>
            <StackPanel Orientation="Horizontal" Grid.Row="5" Grid.Column="1">
                <TextBox x:Name="YarnType1PrefixTextBox" Width="50" FontSize="18" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                <TextBox x:Name="YarnType1SuffixTextBox" Margin="10,0,0,0" Width="50" FontSize="18" HorizontalAlignment="Left" VerticalAlignment="Center"/>
            </StackPanel>

            <Label Content="Jenis Benang 2" FontSize="18" Grid.Row="6" HorizontalAlignment="Right"/>
            <StackPanel Orientation="Horizontal" Grid.Row="6" Grid.Column="1">
                <TextBox x:Name="YarnType2PrefixTextBox" Width="50" FontSize="18" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                <TextBox x:Name="YarnType2SuffixTextBox" Margin="10,0,0,0" Width="50" FontSize="18" HorizontalAlignment="Left" VerticalAlignment="Center"/>
            </StackPanel>

            <Label Content="Grade" FontSize="18" Grid.Row="7" HorizontalAlignment="Right"/>
            <TextBox x:Name="GradeTextBox" Width="100" FontSize="18" Grid.Row="7" Grid.Column="1" HorizontalAlignment="Left" VerticalAlignment="Center"/>

            <Label Content="Pcs" FontSize="18" FontWeight="Bold" Grid.Row="8"/>
            <Label Content="UOM" FontSize="18" Grid.Row="9" HorizontalAlignment="Right" VerticalAlignment="Center"/>
            <Label Content="MTR" FontSize="18" Grid.Row="9" Grid.Column="1"  HorizontalAlignment="Left" VerticalAlignment="Center"/>

            <Label Content="Kuantiti" FontSize="18" Grid.Row="10" HorizontalAlignment="Right"/>
            <TextBox x:Name="QuantityTextBox" Width="100" FontSize="18" Grid.Row="10" Grid.Column="1" HorizontalAlignment="Left" VerticalAlignment="Center" PreviewTextInput="QuantityTextBox_PreviewTextInput"/>

            <Button x:Name="SubmitButton" Content="Submit" FontSize="18" Grid.Row="11" Grid.Column="1" HorizontalAlignment="Left" Height="27" VerticalAlignment="Center" Click="SubmitButton_Click"/>
        </Grid>

        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="5*"/>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>

            <ListView x:Name="BarcodeListView">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Width="75" Header="Kode" DisplayMemberBinding="{Binding Code}"/>
                        <GridViewColumn Width="75" Header="ID SKU" DisplayMemberBinding="{Binding SKUId}"/>
                        <GridViewColumn Width="75" Header="Kuantitas" DisplayMemberBinding="{Binding Quantity}"/>
                        <GridViewColumn Width="75" Header="Satuan" DisplayMemberBinding="{Binding UOMUnit}"/>
                        <GridViewColumn Width="75" Header="Tipe Pack" DisplayMemberBinding="{Binding PackingType}"/>
                    </GridView>
                </ListView.View>
            </ListView>

            <Button x:Name="PrintButton" Content="Print" Grid.Row="1" Width="50" Height="20" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="10" Click="PrintButton_Click"/>

        </Grid>
    </Grid>
</Page>
